<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CTGAppTheme" parent="Theme.Sherlock">
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="homeAsUpIndicator">@drawable/ic_drawer_left</item>
    </style>

    <style name="CTGRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_full</item>
    </style>

    <style name="ActionBar" parent="Widget.Sherlock.ActionBar">
        <item name="background">@color/orange</item>
        <item name="android:background">@color/orange</item>
        <item name="titleTextStyle">@style/customTextAppearance.Sherlock.Widget.ActionBar.Title</item>
    </style>

    <style name="customTextAppearance.Sherlock.Widget.ActionBar.Title" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OverFlow" parent="Widget.Sherlock.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_drawer_left</item>
    </style>

    <style name="FlagQuestionDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/orange</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>