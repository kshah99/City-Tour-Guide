<resources>

    <style name="CTGAppTheme" parent="Theme.Sherlock">
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="homeAsUpIndicator">@drawable/ic_drawer_left</item>
    </style>

    <style name="ActionBar" parent="Widget.Sherlock.ActionBar">
        <item name="background">@color/orange</item>
        <item name="android:background">@color/orange</item>
        <item name="android:titleTextStyle">@style/customTextAppearance.Sherlock.Widget.ActionBar.Title</item>
        <item name="titleTextStyle">@style/customTextAppearance.Sherlock.Widget.ActionBar.Title</item>
    </style>

    <style name="customTextAppearance.Sherlock.Widget.ActionBar.Title" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OverFlow" parent="Widget.Sherlock.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_drawer_left</item>
    </style>

</resources>